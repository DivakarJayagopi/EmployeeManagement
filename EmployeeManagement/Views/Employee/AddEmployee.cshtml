
@{
    ViewBag.Title = "AddEmployee";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="section">
    <div class="section-body">
        <div class="row">
            <div class="col-12 col-md-12 col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4>Employee Info</h4>
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <label>Name</label>
                            <input type="text" class="form-control ShopName">
                        </div>
                        <div class="form-group">
                            <label>Email</label>
                            <div class="input-group">
                                <input type="text" class="form-control ShopArea">
                            </div>
                        </div>
                        <div class="form-group">
                            <label>Mobile Number</label>
                            <input type="number" class="form-control ShopMobileNumber">
                        </div>
                        <div class="form-group">
                            <label>Date of Birth</label>
                            <input type="date" class="form-control MaxOrderCountForShop">
                        </div>
                        <div class="form-group">
                            <label>Address</label>
                            <input type="text" class="form-control MaxOrderCountForShop">
                        </div>
                        <div class="form-group">
                            <label>Team</label>
                            <input type="text" class="form-control MaxOrderCountForShop">
                        </div>
                        <div class="form-group">
                            <label>Role</label>
                            <input type="text" class="form-control MaxOrderCountForShop">
                        </div>
                        <span class="text-danger customErrorMessageAddEmployee"></span>
                        <button class="btn btn-block btn-info AddEmployeeFromSubmit" type="button">Submit</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<script src="~/assets/js/jquery.min.js"></script>
<script src="~/App_Assests/js/employee.js"></script>