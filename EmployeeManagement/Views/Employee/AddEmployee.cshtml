
@{
    ViewBag.Title = "AddEmployee";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="section">
    <div class="section-body">
        <div class="row">
            <div class="col-12 col-md-12 col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4>Employee Info</h4>
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <label>Name</label>
                            <input type="text" class="form-control Name">
                        </div>
                        <div class="form-group">
                            <label>Email</label>
                            <div class="input-group">
                                <input type="text" class="form-control Email">
                            </div>
                        </div>
                        <div class="form-group">
                            <label>Mobile Number</label>
                            <input type="number" class="form-control Number">
                        </div>
                        <div class="form-group">
                            <label>Date of Birth</label>
                            <input type="date" class="form-control dob">
                        </div>
                        <div class="form-group">
                            <label>Date of Joining</label>
                            <input type="date" class="form-control doj">
                        </div>
                        <div class="form-group">
                            <label>Address</label>
                            <input type="text" class="form-control Address">
                        </div>
                        <div class="form-group">
                            <label>Team</label>
                            <input type="text" class="form-control Team">
                        </div>
                        <div class="form-group">
                            <label>Role</label>
                            <input type="text" class="form-control Role">
                        </div>
                        <div class="form-group">
                            <label>Permission Type</label>
                            <select class="form-control IsAdmin">
                                <option value="0">Normal</option>
                                <option value="1">Admin</option>
                            </select>
                        </div>
                        <p><button class="btn btn-danger" id="AddSalaryBtn" data-toggle="modal" data-target="#AddEmployeeSalaryInfo">Add Salary Details</button></p>
                        <span class="text-danger customErrorMessageAddEmployee"></span>
                        <button class="btn btn-block btn-info AddEmployeeFromSubmit" type="button">Submit</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<div class="modal fade" tabindex="-1" role="dialog" id="AddEmployeeSalaryInfo">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add Salary Info</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <input type="hidden" class="EmployeeId" />
                <div class="row">
                    <div class="col-md-12">
                        <span>Basic : </span> <input type="number" class="form-control Basic"  />
                        <span>DA : </span> <input type="number" class="form-control DA"  />
                        <span>HRA : </span> <input type="number" class="form-control HRA"  />
                        <span>Medical Allowances  : </span> <input type="number" class="form-control MedicalAllowances"  />
                        <span>Conveyance Charges : </span> <input type="number" class="form-control ConveyanceCharges"  />
                        <span>Special Allowances  : </span> <input type="number" class="form-control SpecialAllowances"  />
                    </div>
                </div>
                <p></p>
                <span class="text-danger customErrorMessageAddSalaryInfo"></span>
                <button class="btn btn-block btn-info AddEmployeeSalaryInfoBtn" id="AddEmployeeSalaryInfoBtn" type="button">Update</button>
            </div>
        </div>
    </div>
</div>

<script src="~/assets/js/jquery.min.js"></script>
<script src="~/App_Assests/js/employee.js"></script>
<script>
    $(document).ready(function () {
        LoadExistingEmplyeeInfo();
    });
</script>