
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/css/select2.min.css" rel="stylesheet" />
<section class="section">
    <div class="section-body">
        <div class="row">
            <div class="col-12 col-md-12 col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4>Add News</h4>
                    </div>
                    <div class="card-body">
                        <p>Select Employee</p>
                        <div class="form-group">
                            <select id="EmployeesList" class="form-control select2 select2-hidden-accessible" multiple="" data-placeholder=" Select a Employee" style="width: 100%;" tabindex="-1" aria-hidden="true">
                                <option>All</option>
                                <option>Ajith Kumar</option>
                                <option>Alex John</option>
                                <option>Allie Grater</option>
                                <option>Dhanesh Kumar</option>
                                <option>Divakar Jayagopi</option>
                                <option>Mukesh Kannan</option>
                                <option>Olive Yew</option>
                                <option>Peg Legge</option>
                                <option>Ramya Devaraj</option>
                                <option>Super Admin</option>
                                <option>Tamil Selvi</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label>Tile</label>
                            <input type="text" class="form-control">
                        </div>
                        <div class="form-group">
                            <label>Description</label>
                            <div class="input-group">
                                <textarea rows="4" cols="500" class="form-control" style="min-height: 100px;"></textarea>
                            </div>
                        </div>
                        <div class="form-group">
                            <label>Select Image</label>
                            <input type="file" multiple class="form-control">
                        </div>
                    </div>
                    <button class="btn btn-block btn-info AddEmployeeFromSubmit" type="button">Submit</button>
                </div>
            </div>
        </div>
    </div>
</section>

<script src="~/assets/js/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/js/select2.min.js"></script>
<link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/css/select2.min.css" rel="stylesheet" />
<script src="~/App_Assests/js/news.js"></script>